@model IEnumerable<MyLibraryStore.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                @*<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg">Edit</a> |*@
                |
                <button type="button" class="btn btn-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                |
                <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
}
    </tbody>
</table>
