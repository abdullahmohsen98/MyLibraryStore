@model IEnumerable<MyLibraryStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.FullName)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FullName)
            </td>
            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="~/uploads/@item.ImageUrl" style="width:64px;" class="img-thumbnail" />
                }
            </td>
            <td>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                @*<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |*@
                |
                <button type="button" class="btn btn-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
                <button type="button" class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>

            </td>
        </tr>
}
    </tbody>
</table>
